/* pages/attention-tab/attention-tab.wxss */
@import '../templates/attention-item.wxss';

.text {
  width: 100%;
  height: 100%;
  color: white;
}

.title {
  display: flex;
  position: relative;
  width: 100%;
  height: 10%;
  justify-content: center;
  align-items: flex-end;
  color: white;
  text-align: center;
}

.root_container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.empty_view {
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 300rpx;
  height: 300rpx;
}

.scrollview {
  display: flex;
  flex: 1;
  position: absolute;
}

.content_container {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
  justify-content: center;
  align-items: center;
}
