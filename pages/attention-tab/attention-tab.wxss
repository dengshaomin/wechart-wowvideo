@import '../templates/attention-item.wxss';

.text {
  width: 100%;
  height: 100%;
  color: white;
}

.title {
  display: flex;
  position: relative;
  width: 100%;
  height: 150rpx;
  justify-content: center;
  align-items: flex-end;
  color: white;
  text-align: center;
  
}

.root_container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.scrollview {
  display: flex;
  width: 100%;
  height: 100%;
  flex: 1;
  position: relative;
}

.content_container {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
  justify-content: center;
  align-items: center;
  margin: auto;
  
  bottom: 80rpx;
}
